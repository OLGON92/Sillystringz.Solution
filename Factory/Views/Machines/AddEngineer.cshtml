@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Assign an Engineer</h1>

<h4>Assign an Engineer to this Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select an Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" class="btnclass" />
}

<p>@Html.ActionLink("Back to machines", "Index")</p>