@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>

<P>@Html.ValidationMessageFor(model => model.Name, "" , new { @class = "text-danger", @style="font-weight: 600;"})</P>

<P>@Html.ValidationMessageFor(model => model.Description, "" , new { @class = "text-danger", @style="font-weight:600;"})</P>

@using (Html.BeginForm())
{
  
  @Html.LabelFor(model => model.Name, "Name: " )
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Description, "Specialty: ")
  @Html.TextBoxFor(model => model.Description)
  

  <input type="submit" value="Add new patient" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to machines", "Index")</p>