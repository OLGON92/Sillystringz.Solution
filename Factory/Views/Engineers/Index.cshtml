@{
  Layout ="_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

<div class="engineerHome">
  <p class="linkOne">@Html.ActionLink("Add new Engineer", "Create")</p>

  <p class="linkTwo">@Html.ActionLink("Home", "Index","Home")</p>
</div>
<br>
<br>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}
else
{
  
  <ul>
    @foreach(Engineer engineer in Model)
    { 
      <li>@Html.ActionLink($"{engineer.Name}","Details", new {id = engineer.EngineerId})</li>
      <br>
    }
  </ul> 
  
}
