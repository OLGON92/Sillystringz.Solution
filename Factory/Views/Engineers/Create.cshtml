@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Add a new engineer</h1>

<P>@Html.ValidationMessageFor(model => model.Name, "" , new { @class = "text-danger", @style="font-weight: 600;"})</P>

<P>@Html.ValidationMessageFor(model => model.Specialty, "" , new { @class = "text-danger", @style="font-weight:600;"})</P>

@using (Html.BeginForm())
{
  
  @Html.LabelFor(model => model.Name, "Name: " )
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Specialty, "Specialty: ")
  @Html.TextBoxFor(model => model.Specialty)
  

  <input type="submit" value="Add new engineer" class="btnclass" />
}

<p>@Html.ActionLink("Back to engineers", "Index")</p>